<h1>Editing Form</h1>

<form action="/articles/<%= @article.id %>" method="POST">

<input type="hidden" name="_method" value="PATCH">

<label for="article_title" Title:</label>
<input type="text" name="article[title]" id="article_title" value="<%= @article.title %>">

<label for="article_content" Content:</label>
<input type="text" name="article[content]" id="article_content" value="<%= @article.content %>">

<input type="submit" name="submit" id="submit" value="Edit Article!">
</form>
