<h1>Edit Article View </h1>
    <form action="/articles/<%=@article.id%>" method="POST">
        <input type="hidden" name="_method" value="PATCH">

        <label for="article_title">Enter a title:</label>
        <input type="text" id="article_title" name="article[title]" value="<%=@article.title%>">
    
        <label for="article_content">Enter the content:</label>
        <input type="text" id="article_content" name="article[content]" value="<%=@article.content%>">
    
        <input type="submit" id="submit" name="submit" value="Edit article!">
    </form>
